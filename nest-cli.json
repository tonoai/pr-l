{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false
  },
  "defaultLibraryPrefix": "@pressingly/portal-libs",
  "projects": {
    "@pressingly-libs/core": {
      "type": "library",
      "root": "core",
      "entryFile": "index",
      "sourceRoot": "core",
      "compilerOptions": {
        "tsConfigPath": "src/libs/core/tsconfig.lib.json"
      }
    },
    "@pressingly-libs/healthz": {
      "type": "library",
      "root": "healthz",
      "entryFile": "index",
      "sourceRoot": "healthz/src",
      "compilerOptions": {
        "tsConfigPath": "src/libs/healthz/tsconfig.lib.json"
      }
    }
  }
}
