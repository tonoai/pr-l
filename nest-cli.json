{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false
  },
  "projects": {
    "core": {
      "type": "library",
      "root": "libs/core",
      "sourceRoot": "libs/core/src",
      "compilerOptions": {
        "tsConfigPath": "libs/core/tsconfig.lib.json"
      }
    },
    "healthz": {
      "type": "library",
      "root": "libs/healthz",
      "sourceRoot": "libs/healthz/src",
      "compilerOptions": {
        "tsConfigPath": "libs/healthz/tsconfig.lib.json"
      }
    }
  }
}
