{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false
  },
  "projects": {
    "core": {
      "type": "library",
      "root": "modules/core",
      "sourceRoot": "modules/core/src",
      "compilerOptions": {
        "tsConfigPath": "modules/core/tsconfig.lib.json"
      }
    },
    "healthz": {
      "type": "library",
      "root": "modules/healthz",
      "sourceRoot": "modules/healthz/src",
      "compilerOptions": {
        "tsConfigPath": "modules/healthz/tsconfig.lib.json"
      }
    },
    "event-contract": {
      "type": "library",
      "root": "modules/event-contract",
      "entryFile": "index",
      "sourceRoot": "modules/event-contract/src",
      "compilerOptions": {
        "tsConfigPath": "modules/event-contract/tsconfig.lib.json"
      }
    },
    "reconciliation": {
      "type": "library",
      "root": "modules/reconciliation",
      "entryFile": "index",
      "sourceRoot": "modules/reconciliation/src",
      "compilerOptions": {
        "tsConfigPath": "modules/reconciliation/tsconfig.lib.json"
      }
    }
  }
}
